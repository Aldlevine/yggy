{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "rootDirs": [
            "./src"
        ],
        "outDir": "esm",
        "declaration": true,
        "declarationDir": "esm",
        "jsx": "react",
        "jsxFactory": "h",
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": false,
    },
    "include": [
        "./src/**/*"
    ],
}