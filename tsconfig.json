{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "rootDirs": [
            "./"
        ],
        "outDir": "web",
        "sourceMap": false,
        "strict": true,
        "jsx": "react",
        "jsxFactory": "h",
        "alwaysStrict": true,
        "paths": {
            "@preact/*": [
                "./node_modules/preact/*"
            ]
        }
    },
    "compileOnSave": true
}